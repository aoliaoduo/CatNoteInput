<Application x:Class="CatNoteInput.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:CatNoteInput"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <SolidColorBrush x:Key="AppBackgroundBrush" Color="#F5F6F8" />
            <SolidColorBrush x:Key="WindowSurfaceBrush" Color="#FFFFFF" />
            <SolidColorBrush x:Key="CardSurfaceBrush" Color="#FFFFFF" />
            <SolidColorBrush x:Key="PrimaryTextBrush" Color="#1B1F24" />
            <SolidColorBrush x:Key="SecondaryTextBrush" Color="#5A6474" />
            <SolidColorBrush x:Key="MutedTextBrush" Color="#768196" />
            <SolidColorBrush x:Key="AccentBrush" Color="#0F6CBD" />
            <SolidColorBrush x:Key="AccentHoverBrush" Color="#1D7BD6" />
            <SolidColorBrush x:Key="AccentPressedBrush" Color="#0B5AA6" />
            <SolidColorBrush x:Key="AccentDisabledBrush" Color="#B0C1D9" />
            <SolidColorBrush x:Key="CardBorderBrush" Color="#E1E4EB" />
            <SolidColorBrush x:Key="InputBorderBrush" Color="#D3DAE6" />
            <SolidColorBrush x:Key="InputBackgroundBrush" Color="#FFFFFF" />
            <SolidColorBrush x:Key="SubtleLineBrush" Color="#E6ECF3" />

            <Style x:Key="PrimaryButtonStyle" TargetType="Button">
                <Setter Property="Background" Value="{StaticResource AccentBrush}" />
                <Setter Property="Foreground" Value="White" />
                <Setter Property="Padding" Value="20,10" />
                <Setter Property="FontSize" Value="14" />
                <Setter Property="FontWeight" Value="SemiBold" />
                <Setter Property="BorderThickness" Value="0" />
                <Setter Property="Cursor" Value="Hand" />
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" CornerRadius="8">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="{StaticResource AccentHoverBrush}" />
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter Property="Background" Value="{StaticResource AccentPressedBrush}" />
                                </Trigger>
                                <Trigger Property="IsEnabled" Value="False">
                                    <Setter Property="Background" Value="{StaticResource AccentDisabledBrush}" />
                                    <Setter Property="Foreground" Value="#F2F4F8" />
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <Style x:Key="SectionCardStyle" TargetType="Border">
                <Setter Property="CornerRadius" Value="10" />
                <Setter Property="BorderThickness" Value="1" />
                <Setter Property="BorderBrush" Value="{StaticResource CardBorderBrush}" />
                <Setter Property="Background" Value="{StaticResource CardSurfaceBrush}" />
                <Setter Property="Padding" Value="20" />
            </Style>

            <Style x:Key="InputBorderStyle" TargetType="Border">
                <Setter Property="CornerRadius" Value="8" />
                <Setter Property="BorderThickness" Value="1" />
                <Setter Property="BorderBrush" Value="{StaticResource InputBorderBrush}" />
                <Setter Property="Background" Value="{StaticResource InputBackgroundBrush}" />
                <Setter Property="Padding" Value="12" />
            </Style>

            <Style x:Key="InputTextBoxStyle" TargetType="TextBox">
                <Setter Property="Background" Value="Transparent" />
                <Setter Property="BorderThickness" Value="0" />
                <Setter Property="FontSize" Value="14" />
                <Setter Property="Foreground" Value="{StaticResource PrimaryTextBrush}" />
                <Setter Property="Padding" Value="0" />
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>
